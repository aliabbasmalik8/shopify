<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', shop_order_path(order.shop_id,order) %></td>
        <td><%= link_to 'Edit', edit_shop_order_path(order.shop_id,order) %></td>
        <td><%= link_to 'Destroy', shop_order_path(order.shop_id,order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_shop_order_path %>
